@model List<MessageSender.Message>
@{
    ViewBag.Title = "Home Page";
}


@if (ViewBag.Message != null)
{
    <h2>ViewBag.Message </h2>
}


@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Message")
        @Html.TextArea("messageText", new { @class = "form-control", maxlength = "160", minlength = "20" })
    </div>
        <div class="form-group">
            @Html.Label("Recipiants")
            <input type="file" id="toUpload" name="toUpload" class="btn btn-default" />
        </div>
        <button type="submit" class="btn btn-default">Send</button>
}

<div class="container">
    <h2>Previous Messages</h2>
    <p>Newer messages show first:</p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="col-md-3">Date/Time</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MessageDate.ToString("dd.MM.yyyy") <span> - </span> @item.MessageTime</td>
                    <td>@item.MessageText</td>
                </tr>
            }
        </tbody>
    </table>
</div>



